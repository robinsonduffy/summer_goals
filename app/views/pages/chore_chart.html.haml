%form#record-progress{:method => :post}
	%h3 Record Progress
	%p= select_tag "task_id", options_for_select([["-- Choose a goal --" , "" ]] + @kid.tasks.order(:name).collect {|p| [ p.name, p.id ] })
	%p
		%label Note
		= text_field_tag "note" 
	%p= submit_tag "Submit"
			
	%ul#tasks
		- @tasks.each do |task|
			%li{:id => "li-task-#{task.id}", :class => [("disabled" if @kid.completed_tasks.where(:date => @date, :task_id => task.id).first.try(:task_id) == task.id)]}
				%label{:for => "task-#{task.id}"}
					%img{:src => task.image}
					%br
					= task.name
				%input{:id => "task-#{task.id}", :type => "radio", :name => "task_id", :value => task.id, :disabled => @kid.completed_tasks.where(:date => @date, :task_id => task.id).first.try(:task_id) == task.id, :onchange => "$('#li-task-#{task.id}').toggleClass('disabled'); $('#chore-chart').submit()"}
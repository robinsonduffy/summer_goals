= form_for @reward do |f|
  = render "shared/error_messages", :object => f.object
  %div.form-field
    = f.label :name
    = f.text_field :name
  %div.form-field
    = f.label :points
    = f.text_field :points
  %div.form-field
    = f.label :image
    = f.text_field :image
  %div.form-actions
    = f.submit "#{action} Reward"